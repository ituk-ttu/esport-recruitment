extends ../layouts/layout

block content
    section.hero.is-large.home-hero
        .hero-body
            .container.has-text-centered
                h1.title.has-text-white.is-1
                    | CS:GO Observer
    section.section.top-container-after-hero
        .container.content
            p.title.has-text-primary.has-text-centered.is-2 Kirjeldus
            p.has-text-dark
                | Observeri ülesandeks on pakkuda otseülekande vaatajatele erinevaid vaatenurki mängust ning näidata
                |  just kõige huvitavamaid palasid.
            p
                span.has-text-primary.has-text-weight-semibold Panustamise aeg:
                span  19.-21. aprill
            p
                span.has-text-primary.has-text-weight-semibold Meeskond:
                span  broadcast
    section.section
        .container.content
            p.title.has-text-primary Ülesanded
            ul
                li Ülekantavate mängude "kaamera" juhtimine
    section.section
        .container.content
            p.title.has-text-primary Eeldused kandidaadile
            ul
                li Teadmised CS:GO-st
    section.section
        .container.content
            p.title.has-text-primary Kasuks tuleb
            ul
                li Varasem kokkupuude e-spordiüritustel mängude ülekandmisega
    section.section
        .container.content
            p.title.has-text-primary Omalt poolt pakume
            ul
                li Huvitav kogemus
                li Võimalus tõsta Eesti suurima võrgupidude sarja otseülekande kvaliteeti
                li Võimalust saada "jalg ukse vahele" Eesti e-Spordi ürituste korraldamises
                li Vaade Eesti suurima võrgupidude sarja kardinate taha
    section.section
        .container.content
            a(href="https://e-sport-volunteer.typeform.com/to/" + "g5PRP6").button.is-primary.is-large.is-fullwidth.is-outlined Liitu meiega!
    section.section.top-container-after-hero
        .container.content
            p.title.has-text-primary.is-5 Vajad rohkem infot?
            p
                span.has-text-dark Lauri Kukk
                | &nbsp|&nbsp
                span.has-text-light Broadcast Team Lead
                | &nbsp|&nbsp
                a(href="mailto:lauri@ituk.ee") lauri@ituk.ee
